<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/messageViewHolderLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@{}@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtViewSenderName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:text="@string/hint_sender_name"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center_vertical|end"/>

        <TextView
            android:id="@+id/txtViewMessageContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"
            android:text="@string/hint_message_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtViewMessageDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:text="@string/hint_message_date"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center_vertical|start"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>